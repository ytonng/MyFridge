<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#f0f4fd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Fridge Camera"
                        android:textSize="14sp"
                        android:textColor="#808ca6"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textFridgeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Loading..."
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add Camera Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardHeader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/button_bgLight" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Pair New Camera"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate a QR code to pair your Raspberry Pi camera with this fridge"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAdd"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Generate QR Code"
                        android:textSize="16sp"
                        app:icon="@android:drawable/ic_menu_add"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/button_bgLight" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Camera Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCameraSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAddCamera">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.exoplayer2.ui.PlayerView
                            android:id="@+id/playerView"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:visibility="gone"
                            app:surface_type="texture_view"
                            app:use_controller="true" />

                        <!-- Empty State -->
                        <LinearLayout
                            android:id="@+id/emptyVideoState"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="32dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginBottom="16dp"
                                android:src="@android:drawable/ic_menu_camera"
                                app:tint="#CCCCCC" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="No stream active"
                                android:textColor="#999999"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Select a camera and start streaming"
                                android:textColor="#CCCCCC"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:tint="@color/button_bgLight" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="View Live Stream"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Select a paired camera device"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <!-- Spinner Container -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#f0f4fd"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <Spinner
                            android:id="@+id/dropdownDeviceSerial"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonViewStream"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/button_bgLight"
                        android:text="Start Streaming"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Video Player Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVideoPlayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardCameraSelection">


            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/profileProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>